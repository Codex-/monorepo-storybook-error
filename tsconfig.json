{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "composite": true,
    "incremental": true,
    "pretty": true,
    "sourceMap": true,

    "strict": true,

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "removeComments": false,
    "useDefineForClassFields": true
  }
}
